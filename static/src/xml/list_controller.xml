<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-if='nbSelected']" position="inside">
            <button id="edit_school" t-if="model.root.resModel == 'wb.student'" class="btn btn-primary" t-on-click="editSelectedStudentSchoolEvent">
                <span>Edit School</span>
            </button>
        </xpath>
    </t>
</templates>
